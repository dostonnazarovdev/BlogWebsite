@model IEnumerable<BlogWebsite.ViewModels.PostVM>

@{
    ViewData["Title"] = "List of Posts";
}


<div class="container-fluid">
    <a class="btn btn-primary mb-1" asp-action="Create" asp-controller="Post" asp-area="Admin">Add Post</a>
    <div class="card">
        <div class="card-header bg-primary">
            <h4 class="card-title text-white">List of Posts</h4>
        </div>
        <div class="card-body" style="background-color:lightgrey;">
            @foreach(var post in Model)
            {
                <div class="rounded mb-2 bg-white p-2">
                    <div class="row">
                        <div class="col-2 d-flex justify-content-center flex-column">
                            @if (post.PotoUrl == null)
                            {
                                  <img class="img-fluid" src="~/photos/default_image.jpg" style="object-fit:cover;height:100%;width:100%;"/>
                            }
                            else{
                                  <img class="img-fluid" src="~/photos/@post.PotoUrl" style="object-fit:cover;height:100%;width:100%;" />
                                }
                            </div>
                      <div class="col-5 d-flex justify-content-center flex-column">
                            <h4 sytle="font-size:1.5rem; font-weight:bolder" class="text-primary fw-bold">@post.Title</h4>
                            <p>@post.CreateDate</p>
                      </div>
                        <div class="col-5 text-right d-flex justify-content-center flex-column">
                            <h4 sytle="font-size:1rem;" class="fw-bold">@post.AuthorName</h4>
                            <div class="d-flex justify-content-end align-items-center">
                                <a class="btn btn-warning" asp-controller="Post" asp-area="Admin" asp-action="Edit" asp-route-id="@post.Id" method="post">Edit</a> |
                                <form asp-action="Delete" asp-controller="Post" asp-area="Admin" asp-route-id="@post.Id" method="post" onsubmit="return confirm('Do you want to delete this post?')">
                                <button type="submit" class="btn btn-danger">Delete</button>
                               </form>
                            </div>
                        </div>
                  </div>
                </div>
            }
        </div>
    </div>
</div>
