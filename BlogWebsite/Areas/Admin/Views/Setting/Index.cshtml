@model BlogWebsite.ViewModels.SettingVM



@{

    ViewData["Title"] = "Site Setting";
}
<div class="container-fluid">
    <a class="btn btn-primary" asp-action="Index" asp-controller="Post">Go Back</a>
    <div class="card">
        <div class="card-header bg-primary">
            <h4 class="card-title text-white">New Post</h4>
        </div>

        <div class="card-body">
            <form asp-action="Index" asp-controller="Setting" asp-area="Admin" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id"/>
                <div class="row">

                    <div class="col-9 mb-2">

                        <div class="mb-2">
                            <label>SiteName</label>
                            <input type="text" asp-for="SiteName" class="form-control" />
                            <span asp-validation-for="SiteName" class="text-danger"></span>
                        </div>

                        <div class="mb-2">
                            <label>Title</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-2">
                            <label>Short Description</label>
                            <input type="text" asp-for="ShortDescription" class="form-control" />
                            <span asp-validation-for="ShortDescription" class="text-danger"></span>
                        </div>

                        <div class="mb-2">
                            <label>Facebook Url</label>
                            <input id="text" asp-for="FacebookUrl" class="form-control"></input>
                            <span asp-validation-for="FacebookUrl" class="text-danger"></span>
                        </div>


                        <div class="mb-2">
                            <label>Github Url</label>
                            <input id="text" asp-for="GithubUrl" class="form-control"></input>
                            <span asp-validation-for="GithubUrl" class="text-danger"></span>
                        </div>

                        <div class="mb-2">
                            <label>Twitter Url</label>
                            <input id="text" asp-for="TwitterUrl" class="form-control"></input>
                            <span asp-validation-for="TwitterUrl" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-3">

                        <div class="mb-2">
                            <img src="~/photos/youtubelogo_image.jpg" class="img-fluid" id="photo" />
                        </div>

                        <div class="mb-2">
                            <label>Photo</label>
                            <input type="file" asp-for="Photo" class="custom-file" />
                            <span asp-validation-for="Photo" class="text-danger"></span>
                        </div>
                    </div>

                </div>
                <div class="mb-2">
                    <button type="sumit" class="btn btn-primary w-100">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(".custom-file").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
            document.getElementById('photo').src = window.URL.createObjectURL(this.files[0])
        });
    </script>
}
